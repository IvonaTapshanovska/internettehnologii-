@model WebApplication4.Models.AddToRole
@{
    ViewBag.Title = "AddToRole";
}

<h2>AddToRole</h2>
@using (Html.BeginForm("AddToRole","Account"))
            { 

                <div class="form-group">
                    @Html.DropDownListFor(m=>m.selectedRole,new SelectList(Model.roles))
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email);
                </div>
                <button type="submit">Add</button>
            }
