@model WebApplication4.Models.StudentSubjectGrades 
@{
    ViewBag.Title = "AddGrade";
}

<h2>AddGrade</h2>

@using (Html.BeginForm("AddGrade", "Subjects"))
{
    <div class="form-group">
        @Html.DropDownListFor(m=>m.selectedStudent,new SelectList(Model.students,"StudentId","Name"))
        @Html.HiddenFor(m=>m.SubjectId)
       
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.Grade)
    </div>
    <button type="submit">Add</button>
}



